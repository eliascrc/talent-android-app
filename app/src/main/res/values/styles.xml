<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/dark_orange</item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="android:textColorLink">@color/link_text</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/activity_splash_bg</item>
        <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        android:background="@color/colorClean">
    </style>

    <style name="PromptLabel" parent="AppTheme">
        <item name="android:fontFamily">Source Sans Pro</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TitleLabel" parent="AppTheme">
        <item name="android:fontFamily">Source Sans Pro</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>


    <style name="ContentHeader" parent="AppTheme">
        <item name="android:fontFamily">Source Sans Pro</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ContentText" parent="AppTheme">
        <item name="android:fontFamily">Source Sans Pro</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="ContentTextSmall" parent="AppTheme">
        <item name="android:fontFamily">Source Sans Pro</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="EditText" parent="AppTheme">
        <item name="android:fontFamily">Source Sans Pro</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingBottom">12.5dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingTop">10.5dp</item>
    </style>

    <style	name="SubTitleLabel" parent="@style/AppTheme">
        <item name="android:fontFamily">Source Sans Pro</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonText" parent="AppTheme">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SpinnerStyle" parent = "AppTheme">
        <item name="android:fontFamily">Source Sans Pro</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

    <style name="EnterOrganizationIdEnding" parent="AppTheme">
        <item name="android:fontFamily">Source Sans Pro</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SignInForgotPassword" parent="AppTheme">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">@color/link_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ErrorMessage" parent="AppTheme">
        <item name="android:fontFamily">Source Sans Pro</item>
        <item name="android:textColor">@color/error_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.29</item>
    </style>

    <style name="AppTheme.Launcher.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Launcher.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Launcher.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>