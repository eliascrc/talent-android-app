<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/hint_text</item>
    </style>

    <style name="AppTheme.Launcher">
    <item name="android:windowBackground">@drawable/launch_screen</item>
    <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
    <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        android:background="@color/colorClean">
    </style>

    <style name="Text"/>

    <style
        name="SignInPromptLabel"
        parent="@style/Text">
        <item name="android:fontFamily">Source Sans Pro</item>
        <item name="android:textColor">#FF495057</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style
        name="SignInEditText"
        parent="@style/Text">
        <item name="android:fontFamily">Source Sans Pro</item>
        <item name="android:textColor">#FF495057</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingBottom">12.5dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingTop">10.5dp</item>
    </style>

    <style
        name="SignInButton"
        parent="@style/Text">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingTop">14dp</item>
    </style>

    <style
        name="EnterOrganizationIdEnding"
        parent="@style/Text">
        <item name="android:fontFamily">Source Sans Pro</item>
        <item name="android:textColor">#FF495057</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style
        name="SignInForgotPassword"
        parent="@style/Text">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">@color/textColorLink</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
